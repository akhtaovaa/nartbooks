[tool.ruff]
# Игнорировать определенные правила
ignore = ["E501"]  # Длина строки (можно настроить позже)

[tool.ruff.lint]
# Включить правила проверки
select = [
    "E",   # pycodestyle errors
    "W",   # pycodestyle warnings
    "F",   # pyflakes
    "I",   # isort (сортировка импортов)
    "B",   # flake8-bugbear (поиск багов)
    "C4",  # flake8-comprehensions (улучшение списковых включений)
    "UP",  # pyupgrade (обновление синтаксиса)
]

[tool.ruff.lint.isort]
# Настройки сортировки импортов
known-first-party = ["app"]

[tool.ruff.format]
# Настройки форматирования
quote-style = "double"
indent-style = "space"
line-ending = "auto"

